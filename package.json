{
  "name": "convivial",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "web",
    "strapi"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=web",
    "dev:strapi": "npm run dev --workspace=strapi",
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:strapi\"",
    "build:web": "npm run build --workspace=web",
    "build:strapi": "npm run build --workspace=strapi",
    "build": "npm run build:web && npm run build:strapi",
    "start:web": "npm run start --workspace=web",
    "start:strapi": "npm run start --workspace=strapi",
    "start": "concurrently \"npm run start:web\" \"npm run start:strapi\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}